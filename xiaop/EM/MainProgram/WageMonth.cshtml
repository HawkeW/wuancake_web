            <div>
                <table id="table" class="bordered" style="width:100%">
                    <tr>
                        <th>员工编号</th>
                        <th>员工姓名</th>
                        <th>部门</th>
                        <th>月份</th>
                        <th>应发工资</th>
                    </tr>
                        @{
                            var sqlEmNumber = DBHelper.execReader("select EmNumber from [Employee]");
                            while(sqlEmNumber.Read())
                            {
                                var sqlEame = DBHelper.execReader("select EmName,Wage from [Employee] where EmNumber ='" + sqlEmNumber["EmNumber"] + "'");
                                sqlEame.Read();
                                var wage1 = Convert.ToDouble(sqlEame["wage"]);
                                //var sqlname = sqlEame["EmName"].ToString();
                                var DeName = DBHelper.execReader("select a.DeName from [Department] a,[Employee] b where a.DeNumber=b.DeNumber and b.EmNumber='" + sqlEmNumber["EmNumber"] + "'");
                                DeName.Read();
                                var dename = DeName["DeName"];
                                var month = DateTime.Now.Month.ToString();
                                //请假次数
                                var Leave = DBHelper.execReader("select count(Time) from [Leave] where EmNumber ='" + sqlEmNumber["EmNumber"] + "' and State='通过' and Month='" + month + "'");
                                Leave.Read();
                                var leave = Leave[0];
                                //加班次数
                                var worktime = DBHelper.execReader("select count(State) from [WorkTime] where EmNumber ='" + sqlEmNumber["EmNumber"] + "' and State='通过' and Month='" + month + "' ");
                                worktime.Read();
                                var wor = worktime[0];
                                //各种计算
                                var wage = DBHelper.execReader("select EmNumber,MedicalIn,EmpIn,MaternityIn,UnemploymentIN,OldAgeIn,HousingPro,TraveSu from [WageMonth] where EmNumber='" + sqlEmNumber["EmNumber"] + "'");
                                wage.Read();
                                var check = DBHelper.execReader("select count(EmNumber) from [Check] where EmNumber='" + sqlEmNumber["EmNumber"] + "'");
                                check.Read();
                                var ch = check[0];
                                var MedicalIn = Convert.ToDouble(wage["MedicalIn"]);
                                var EmpIn = Convert.ToDouble(wage["EmpIn"]);
                                var MaternityIn = Convert.ToDouble(wage["MaternityIn"]);
                                var UnemploymentIN = Convert.ToDouble(wage["UnemploymentIN"]);
                                var OldAgeIn = Convert.ToDouble(wage["OldAgeIn"]);
                                var HousingPro = Convert.ToDouble(wage["HousingPro"]);
                                var TraveSu = Convert.ToDouble(wage["TraveSu"]);
                                var wagemonth = wage1 - MedicalIn - EmpIn - MaternityIn - UnemploymentIN - OldAgeIn + HousingPro + TraveSu - Convert.ToDouble(leave) * 100 + Convert.ToDouble(wor)*20;
                            <tr>
                               <td>@sqlEmNumber["EmNumber"]</td>
                                <td>@sqlEame["EmName"]</td>
                                <td>@dename</td>
                                <td>@month</td>
                                <td>@wagemonth</td>
                            </tr>
                            }
                            }

